   "cell_type": "code",
   "execution_count": 32,
   "id": "2cf9face",
   "metadata": {},
   "outputs": [],
   "source": [
    "def recommend(name,sgm=sgm):\n",
    "    idx=indices[name]\n",
    "    movie_scores=list(enumerate(sgm[idx]))\n",
    "    movie_scores=sorted(movie_scores,key=lambda x:x[1],reverse=True)\n",
    "    top_10_movies=movie_scores[1:11]\n",
    "    movies_indices=[i[0] for i in top_10_movies]\n",
    "    return movies['original_title'].iloc[movies_indices]"
   ]
  },
